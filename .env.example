# Environment variables for Azure Cost Optimizer
# Copy this to .env and fill in your values

# Azure (use `az login` for development, or set these for service principal)
# AZURE_SUBSCRIPTION_ID=your-subscription-id
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# Log Analytics (for security module)
# LOG_ANALYTICS_WORKSPACE_ID=your-workspace-id

# Flask
FLASK_SECRET_KEY=change-this-to-a-random-string
FLASK_DEBUG=true
PORT=5000
BASE_URL=http://localhost:5000

# Stripe (get keys from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_BASIC=price_...
STRIPE_PRICE_PRO=price_...
